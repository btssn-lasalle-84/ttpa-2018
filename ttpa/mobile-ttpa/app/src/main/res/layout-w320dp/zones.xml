<?xml version="1.0" encoding="utf-8"?>

<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/table_filet"
            android:columnCount="3"
            android:padding="5dp"
            android:rowCount="3">
    <Button
        android:id="@+id/case1"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_column="0"
        android:layout_margin="1dp"
        android:layout_marginStart="1dp"
        android:layout_row="0"
        android:background="@drawable/case_libre"
        android:textColor="#FFFFFF"
        android:text="ZONE 1"/>

    <Button
        android:id="@+id/case2"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_column="1"
        android:layout_margin="1dp"
        android:layout_row="0"
        android:background="@drawable/case_libre"
        android:textColor="#FFFFFF"
        android:text="ZONE 2"/>

    <Button
        android:id="@+id/case3"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_column="2"
        android:layout_margin="1dp"
        android:layout_row="0"
        android:background="@drawable/case_libre"
        android:textColor="#FFFFFF"
        android:text="ZONE 3"/>

    <Button
        android:id="@+id/case4"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_column="0"
        android:layout_margin="1dp"
        android:layout_row="1"
        android:background="@drawable/case_libre"
        android:textColor="#FFFFFF"
        android:text="ZONE 4"/>

    <Button
        android:id="@+id/case5"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_column="1"
        android:layout_margin="1dp"
        android:layout_row="1"
        android:background="@drawable/case_libre"
        android:textColor="#FFFFFF"
        android:text="ZONE 5"/>

    <Button
        android:id="@+id/case6"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_column="2"
        android:layout_margin="1dp"
        android:layout_row="1"
        android:background="@drawable/case_libre"
        android:textColor="#FFFFFF"
        android:text="ZONE 6"/>

    <Button
        android:id="@+id/case7"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_column="0"
        android:layout_margin="1dp"
        android:layout_marginBottom="55dp"
        android:layout_row="2"
        android:background="@drawable/case_libre"
        android:textColor="#FFFFFF"
        android:text="ZONE 7"/>

    <Button
        android:id="@+id/case8"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_column="1"
        android:layout_margin="1dp"
        android:layout_marginBottom="55dp"
        android:layout_row="2"
        android:background="@drawable/case_libre"
        android:textColor="#FFFFFF"
        android:text="ZONE 8"/>

    <Button
        android:id="@+id/case9"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_column="2"
        android:layout_margin="1dp"
        android:layout_marginBottom="55dp"
        android:layout_row="2"
        android:background="@drawable/case_libre"
        android:textColor="#FFFFFF"
        android:text="ZONE 9"/>

</GridLayout>
